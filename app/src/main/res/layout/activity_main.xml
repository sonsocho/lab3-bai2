<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- Kết quả hiển thị trên cùng -->
    <TextView
        android:id="@+id/tvResult"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="32sp"
        android:gravity="end"
        android:text="0"
        android:layout_alignParentTop="true"
        android:layout_marginBottom="16dp"/>

    <!-- Lưới các nút máy tính nằm dưới TextView -->
    <GridLayout
        android:id="@+id/gridLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tvResult"
        android:layout_marginTop="16dp"
        android:rowCount="5"
        android:columnCount="4">

        <!-- Row 1 -->
        <Button
            android:text="7"
            android:id="@+id/btn7"/>
        <Button
            android:text="8"
            android:id="@+id/btn8"/>
        <Button
            android:text="9"
            android:id="@+id/btn9"/>
        <Button
            android:text="/"
            android:id="@+id/btnDivide"/>

        <!-- Row 2 -->
        <Button
            android:text="4"
            android:id="@+id/btn4"/>
        <Button
            android:text="5"
            android:id="@+id/btn5"/>
        <Button
            android:text="6"
            android:id="@+id/btn6"/>
        <Button
            android:text="*"
            android:id="@+id/btnMultiply"/>

        <!-- Row 3 -->
        <Button
            android:text="1"
            android:id="@+id/btn1"/>
        <Button
            android:text="2"
            android:id="@+id/btn2"/>
        <Button
            android:text="3"
            android:id="@+id/btn3"/>
        <Button
            android:text="-"
            android:id="@+id/btnSubtract"/>

        <!-- Row 4 -->
        <Button
            android:text="0"
            android:id="@+id/btn0"/>
        <Button
            android:text="C"
            android:id="@+id/btnClear"/>
        <Button
            android:text="="
            android:id="@+id/btnEquals"/>
        <Button
            android:text="+"
            android:id="@+id/btnAdd"/>

    </GridLayout>

</RelativeLayout>
